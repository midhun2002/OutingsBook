<section class="pb-4 pt-4">
    <div class="d-flex mb-2 align-items-center">
      <h2>All Outings</h2>
    </div>
  
    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      <% if(typeof Outings !== 'undefined' && Outings.length > 0) { %>
        <% Outings.forEach(function(outing, index){ %>
        <a href="/outing/<%= outing._id %>" class="col text-center category__link">
          <div class="category__img category__img--large shadow">
            <img src="/uploads/<%= outing.image %>" alt="<%= outing.name %>" loading="lazy">
          </div>
          <div class="pt-1"><%= outing.name %></div>
        </a>
        <% }) %>
      <% } else { %>
        <p>No items found.</p>
      <% } %>
    </div>
  </section>